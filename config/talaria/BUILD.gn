  libs = [
    "wifi",
    "rfdrv",
    "lwip2",
    "supplicant",
    "freertos",
    "c",
    "innos",
    "fs",
    "osal",
    "components",
    "mbedtls_sha256_sw",
    "dragonfly",
    "bt_host",
    "bt_controller",
    "bt_profiles",
    "${chip_root}/.environment/cipd/packages/arm/arm-none-eabi/lib/thumb/v7-m/nofp/libstdc++_nano.a",
