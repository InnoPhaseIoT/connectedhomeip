    "-Wshadow",
    "-Wnull-dereference",
    "-Warray-bounds=2",
    "-Os",
    "-Wno-unused-variable",
    "-Wno-unused-function",
    "-fno-exceptions",
    "-fpermissive",
    "-fdiagnostics-color",
